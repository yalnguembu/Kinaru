<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Kinaru.ViewModels"
             x:Class="Kinaru.Views.FilterPage"
             x:DataType="vm:FilterViewModel"
             Title="Filtres"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="16" BackgroundColor="White">
            <ImageButton Source="close.png"
                         WidthRequest="24"
                         HeightRequest="24"
                         BackgroundColor="Transparent"
                         Command="{Binding CloseCommand}"
                         Grid.Column="0" />
            <Label Text="Filtres"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#1E3A5F"
                   HorizontalOptions="Center"
                   Grid.Column="1" />
            <Label Text="Réinitialiser"
                   FontSize="14"
                   TextColor="#FF6B35"
                   FontAttributes="Bold"
                   HorizontalOptions="End"
                   VerticalOptions="Center"
                   Grid.Column="2">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ResetFiltersCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="24" Padding="16">

                <!-- Property Type -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Type de propriété"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#1E3A5F" />
                    <Border StrokeThickness="1"
                            Stroke="#E5E7EB"
                            BackgroundColor="#F9FAFB"
                            Padding="12,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Picker Title="Sélectionner un type"
                                ItemsSource="{Binding PropertyTypes}"
                                SelectedItem="{Binding SelectedTypeStr}"
                                TextColor="#1F2937"
                                TitleColor="#9CA3AF" />
                    </Border>
                </VerticalStackLayout>

                <!-- Price Range -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Budget (FCFA)"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#1E3A5F" />
                    <Grid ColumnDefinitions="*,16,*" ColumnSpacing="0">
                        <Border Grid.Column="0"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="#F9FAFB"
                                Padding="12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Placeholder="Min"
                                   Text="{Binding Filter.PrixMin}"
                                   Keyboard="Numeric"
                                   TextColor="#1F2937"
                                   PlaceholderColor="#9CA3AF" />
                        </Border>
                        <Label Text="-"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="#6B7280" />
                        <Border Grid.Column="2"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="#F9FAFB"
                                Padding="12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Placeholder="Max"
                                   Text="{Binding Filter.PrixMax}"
                                   Keyboard="Numeric"
                                   TextColor="#1F2937"
                                   PlaceholderColor="#9CA3AF" />
                        </Border>
                    </Grid>
                </VerticalStackLayout>

                <!-- Location -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Localisation"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#1E3A5F" />
                    <VerticalStackLayout Spacing="12">
                        <Border StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="#F9FAFB"
                                Padding="12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Placeholder="Ville"
                                   Text="{Binding Filter.Ville}"
                                   TextColor="#1F2937"
                                   PlaceholderColor="#9CA3AF" />
                        </Border>
                        <Border StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="#F9FAFB"
                                Padding="12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Placeholder="Quartier"
                                   Text="{Binding Filter.Quartier}"
                                   TextColor="#1F2937"
                                   PlaceholderColor="#9CA3AF" />
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Rooms & Area -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                        <Label Text="Chambres (Min)"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#1E3A5F" />
                        <Border StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="#F9FAFB"
                                Padding="12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Filter.NombreChambresMin}"
                                   Keyboard="Numeric"
                                   TextColor="#1F2937" />
                        </Border>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" Spacing="8">
                        <Label Text="Surface Min (m²)"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#1E3A5F" />
                        <Border StrokeThickness="1"
                                Stroke="#E5E7EB"
                                BackgroundColor="#F9FAFB"
                                Padding="12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Filter.SuperficieMin}"
                                   Keyboard="Numeric"
                                   TextColor="#1F2937" />
                        </Border>
                    </VerticalStackLayout>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer -->
        <Grid Grid.Row="2" Padding="16" BackgroundColor="White">
            <Border.Shadow>
                <Shadow Brush="#E5E7EB" Offset="0,-2" Radius="8" Opacity="0.3" />
            </Border.Shadow>
            <Button Text="Appliquer les filtres"
                    BackgroundColor="#1E3A5F"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="56"
                    CornerRadius="28"
                    Command="{Binding ApplyFiltersCommand}" />
        </Grid>

    </Grid>
</ContentPage>
