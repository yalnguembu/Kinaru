<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Kinaru.ViewModels"
             x:Class="Kinaru.Views.HomePage"
             x:DataType="vm:HomeViewModel"
             Title="Kinaru"
             BackgroundColor="White"
             Loaded="OnPageLoaded">

    <Grid RowDefinitions="Auto,*" x:Name="page">
        
        <!-- Header with Search -->
        <VerticalStackLayout Grid.Row="0" Padding="16,16,16,8" Spacing="16">
            
            <!-- Welcome Text -->
            <Label Text="Trouvez votre maison"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1E3A5F" />

            <!-- Search Bar -->
            <Border StrokeThickness="0"
                    BackgroundColor="#F3F4F6"
                    Padding="12,8"
                    HeightRequest="48">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                    <Entry Placeholder="Rechercher une propriété..."
                           Text="{Binding SearchText}"
                           BackgroundColor="Transparent"
                           TextColor="#1F2937"
                           PlaceholderColor="#9CA3AF"
                           VerticalOptions="Center"
                           ReturnCommand="{Binding SearchCommand}"
                           Grid.Column="0" />
                    <ImageButton Source="search.png"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 Command="{Binding SearchCommand}"
                                 VerticalOptions="Center"
                                 Grid.Column="1" />
                    <ImageButton Source="filter.png"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 Command="{Binding NavigateToFiltersCommand}"
                                 VerticalOptions="Center"
                                 Grid.Column="2" />
                </Grid>
            </Border>

        </VerticalStackLayout>

        <!-- Content -->
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}"
                     Grid.Row="1">
            <ScrollView>
                <VerticalStackLayout Spacing="16" Padding="16,0,16,16">

                    <!-- Featured Properties Section -->
                    <Label Text="Propriétés en vedette"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1E3A5F"
                           Margin="0,8,0,8" />

                    <CollectionView ItemsSource="{Binding FeaturedProperties}"
                                    HeightRequest="280">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="12" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeThickness="0"
                                        BackgroundColor="White"
                                        WidthRequest="240"
                                        HeightRequest="260">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Border.Shadow>
                                        <Shadow Brush="#E5E7EB" Offset="0,2" Radius="8" Opacity="0.3" />
                                    </Border.Shadow>
                                    <Grid RowDefinitions="160,*">
                                        <!-- Property Image -->
                                        <Image Source="{Binding ImagePrincipale}"
                                               Aspect="AspectFill"
                                               Grid.Row="0">
                                            <Image.Clip>
                                                <RoundRectangleGeometry CornerRadius="12,12,0,0" Rect="0,0,240,160" />
                                            </Image.Clip>
                                        </Image>

                                        <!-- Favorite Button -->
                                        <ImageButton Source="heart.png"
                                                     WidthRequest="32"
                                                     HeightRequest="32"
                                                     BackgroundColor="#80FFFFFF"
                                                     CornerRadius="16"
                                                     Padding="6"
                                                     HorizontalOptions="End"
                                                     VerticalOptions="Start"
                                                     Margin="8"
                                                     Grid.Row="0" />

                                        <!-- Property Info -->
                                        <VerticalStackLayout Padding="12" Spacing="4" Grid.Row="1">
                                            <Label Text="{Binding Prix, StringFormat='{0:N0} FCFA'}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#FF6B35" />
                                            <Label Text="{Binding Titre}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#1F2937"
                                                   MaxLines="1"
                                                   LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding Adresse}"
                                                   FontSize="12"
                                                   TextColor="#6B7280"
                                                   MaxLines="1"
                                                   LineBreakMode="TailTruncation" />
                                            <HorizontalStackLayout Spacing="12" Margin="0,4,0,0">
                                                <HorizontalStackLayout Spacing="4">
                                                    <Image Source="bed.png" WidthRequest="16" HeightRequest="16" />
                                                    <Label Text="{Binding NombreChambres}" FontSize="12" TextColor="#6B7280" />
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Spacing="4">
                                                    <Image Source="bath.png" WidthRequest="16" HeightRequest="16" />
                                                    <Label Text="{Binding NombreSallesBain}" FontSize="12" TextColor="#6B7280" />
                                                </HorizontalStackLayout>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=NavigateToDetailsCommand}"
                                                                  CommandParameter="{Binding Id}" />
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- All Properties Section -->
                    <Label Text="Toutes les propriétés"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1E3A5F"
                           Margin="0,16,0,8" />

                    <CollectionView ItemsSource="{Binding AllProperties}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeThickness="0"
                                        BackgroundColor="White"
                                        Margin="0,0,0,12">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Border.Shadow>
                                        <Shadow Brush="#E5E7EB" Offset="0,2" Radius="8" Opacity="0.3" />
                                    </Border.Shadow>
                                    <Grid ColumnDefinitions="120,*" HeightRequest="120">
                                        <!-- Property Image -->
                                        <Image Source="{Binding ImagePrincipale}"
                                               Aspect="AspectFill"
                                               Grid.Column="0">
                                            <Image.Clip>
                                                <RoundRectangleGeometry CornerRadius="12,0,0,12" Rect="0,0,120,120" />
                                            </Image.Clip>
                                        </Image>

                                        <!-- Property Info -->
                                        <Grid RowDefinitions="*,Auto" Padding="12" Grid.Column="1">
                                            <VerticalStackLayout Spacing="4" Grid.Row="0">
                                                <Label Text="{Binding Prix, StringFormat='{0:N0} FCFA'}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#FF6B35" />
                                                <Label Text="{Binding Titre}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#1F2937"
                                                       MaxLines="1"
                                                       LineBreakMode="TailTruncation" />
                                                <Label Text="{Binding Adresse}"
                                                       FontSize="12"
                                                       TextColor="#6B7280"
                                                       MaxLines="1"
                                                       LineBreakMode="TailTruncation" />
                                            </VerticalStackLayout>

                                            <HorizontalStackLayout Spacing="12" Grid.Row="1">
                                                <HorizontalStackLayout Spacing="4">
                                                    <Image Source="bed.png" WidthRequest="16" HeightRequest="16" />
                                                    <Label Text="{Binding NombreChambres}" FontSize="12" TextColor="#6B7280" />
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Spacing="4">
                                                    <Image Source="bath.png" WidthRequest="16" HeightRequest="16" />
                                                    <Label Text="{Binding NombreSallesBain}" FontSize="12" TextColor="#6B7280" />
                                                </HorizontalStackLayout>
                                            </HorizontalStackLayout>

                                            <!-- Favorite Button -->
                                            <ImageButton Source="heart.png"
                                                         WidthRequest="32"
                                                         HeightRequest="32"
                                                         BackgroundColor="Transparent"
                                                         Padding="6"
                                                         HorizontalOptions="End"
                                                         VerticalOptions="Start"
                                                         Grid.Row="0" />
                                        </Grid>

                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=NavigateToDetailsCommand}"
                                                                  CommandParameter="{Binding Id}" />
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#FF6B35"
                                       HorizontalOptions="Center"
                                       Margin="0,20,0,0" />

                    <!-- Error Message -->
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontSize="14"
                           HorizontalOptions="Center"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                           Margin="0,20,0,0" />

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

    </Grid>
</ContentPage>
