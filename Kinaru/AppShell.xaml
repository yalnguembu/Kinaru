<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kinaru.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Kinaru"
    xmlns:views="clr-namespace:Kinaru.Views"
    Title="Kinaru">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        Shell.NavBarIsVisible="False" />

    <TabBar Route="MainPage">
        <Tab Title="Accueil" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Title="Favoris" Icon="heart.png">
            <ShellContent ContentTemplate="{DataTemplate views:FavoritesPage}" Route="FavoritesPage" />
        </Tab>
        <Tab Title="Messages" Icon="chat.png">
            <ShellContent ContentTemplate="{DataTemplate views:MessagingPage}" Route="MessagingPage" />
        </Tab>
        <Tab Title="Profil" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" Route="ProfilePage" />
        </Tab>
    </TabBar>

</Shell>
